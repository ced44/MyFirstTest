<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.icarjs.myfirsttest.Options">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mainLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="OPTIONS"
            android:id="@+id/Titre_options"
            android:layout_gravity="center_horizontal"
            android:textSize="40dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="109dp"
            android:layout_weight="0.16"
            android:layout_alignParentEnd="true"
            android:id="@+id/frameLayout"
            android:layout_gravity="center">

            <CheckBox
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Music enable"
                android:id="@+id/chck_music"
                android:layout_gravity="center_horizontal|top"
                android:checked="true"
                android:textAlignment="center"
                android:enabled="true"
                android:textSize="20dp"
                android:onClick="onCheck_music" />

            <CheckBox
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Sound enable"
                android:id="@+id/chck_sound"
                android:layout_gravity="center"
                android:checked="true"
                android:textAlignment="center"
                android:enabled="true"
                android:textSize="20dp"
                android:onClick="onCheck_sound" />

        </FrameLayout>
    </FrameLayout>

</RelativeLayout>
